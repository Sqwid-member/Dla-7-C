    <script>
        document.getElementById('createPostButton').addEventListener('click', () => {
            // Show post creation form or functionality based on user role
            const user = JSON.parse(localStorage.getItem('users')).find(u => u.username === 'sk');  // Dummy check for user role
            if (user) {
                alert('Możesz stworzyć post!');
            } else {
                alert('Nie masz uprawnień do tworzenia postów!');
            }
        });

        document.getElementById('showListButton').addEventListener('click', () => {
            alert('Lista uczniów w klasie 7-A');
        });

        document.getElementById('reportProblemsButton').addEventListener('click', () => {
            window.location.href = 'mailto:baseofclassessp4@gmail.com';
        });
    </script>
